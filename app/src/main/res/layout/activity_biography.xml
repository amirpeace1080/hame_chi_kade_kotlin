<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".biography">

    <TextView
        android:id="@+id/text_bio"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:text="لطفا منتظر باشید..."
        android:textSize="22dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:background="#008000"
        android:text="بعدی"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_copy"
        app:layout_constraintEnd_toEndOf="@+id/text_bio"
        app:layout_constraintTop_toTopOf="@+id/button_copy" />

    <ImageButton
        android:id="@+id/button_copy"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/text_bio"
        app:layout_constraintTop_toBottomOf="@+id/text_bio"
        app:srcCompat="@drawable/copy" />
</androidx.constraintlayout.widget.ConstraintLayout>